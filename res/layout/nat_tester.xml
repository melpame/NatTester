<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    >
	
	<LinearLayout android:id="@+id/nat_tester_title"
		android:gravity="right"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		</LinearLayout>
		
	
	<LinearLayout
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:id="@+id/nat_tester_summary" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:singleLine="false" android:textSize="20dip" android:textColor="#FFFFFF" />
		
		
	
	</LinearLayout>
	

	<Button android:id="@+id/nat_tester_start_stop"
			android:layout_marginTop="5dip" android:layout_centerHorizontal="true"
			android:layout_width="fill_parent" android:layout_height="50dip"
			android:text="Start Test" android:textStyle="bold" android:textSize="17dip"
			android:onClick="onStartStop"></Button>
		
		
	
	<LinearLayout
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:id="@+id/nat_tester_result" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:singleLine="false" android:textSize="10dip" android:textColor="#FFFFFF" />
		
	</LinearLayout>
	
	
	<Button android:id="@+id/nat_tester_send_mail"
			android:layout_marginTop="5dip" android:layout_centerHorizontal="true"
			android:layout_width="fill_parent" android:layout_height="50dip"
			android:text="Send Mail" android:textStyle="bold" android:textSize="17dip"
			android:onClick="onSendMail"></Button>
		
	
	
</LinearLayout>
